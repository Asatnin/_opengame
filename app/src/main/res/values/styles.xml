<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="android:colorControlNormal">@color/white</item>
        <item name="colorAccent">@color/main</item>
        <item name="colorPrimary">@color/main</item>
        <item name="colorPrimaryDark">@color/dark_main</item>
        <item name="android:navigationBarColor">@color/dark_main</item>
    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="SpinnerStyle" parent="android:Widget">
        <item name="android:dropDownSelector">@color/white</item>
    </style>

</resources>
