

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    tools:context="com.dkondratov.opengame.activities.AddFieldActivity">

    <include layout="@layout/toolbar_menu"
        android:id="@+id/include" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_below="@+id/include"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/include"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Вид спорта"
                android:textColor="@color/marker"
                android:id="@+id/textView2"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinner_sports_l"
                android:layout_below="@+id/textView2"
                android:layout_marginBottom="14dp"
                android:layout_marginTop="14dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@drawable/stroke_b">
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinner_sports"
                    android:layout_marginBottom="14dp"
                    android:layout_marginTop="14dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
            </RelativeLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Город"
                android:textColor="@color/marker"
                android:id="@+id/textView6"
                android:layout_below="@+id/spinner_sports_l"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edittext_city"
                android:layout_marginBottom="8dp"
                android:textColor="@color/white"
                android:layout_marginTop="8dp"
                android:layout_below="@+id/textView6"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Адрес"
                android:textColor="@color/marker"
                android:id="@+id/textView7"
                android:layout_below="@+id/edittext_city"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edittext_address"
                android:textColor="@color/white"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:layout_below="@+id/textView7"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Покрытие"
                android:textColor="@color/marker"
                android:id="@+id/textView8"
                android:layout_below="@+id/edittext_address"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinner_covers_l"
                android:layout_below="@+id/textView8"
                android:layout_marginBottom="14dp"
                android:layout_marginTop="14dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@drawable/stroke_b">
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinner_covers"
                    android:layout_marginBottom="14dp"
                    android:layout_marginTop="14dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
            </RelativeLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Максимальное кол-во игроков"
                android:textColor="@color/marker"
                android:id="@+id/textView9"
                android:layout_below="@+id/spinner_covers_l"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edittext_max_players"
                android:textColor="@color/white"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:layout_below="@+id/textView9"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:inputType="number" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Освещение"
                android:textColor="@color/marker"
                android:id="@+id/textView10"
                android:layout_below="@+id/edittext_max_players"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinner_lightning_l"
                android:layout_below="@+id/textView10"
                android:layout_marginBottom="14dp"
                android:layout_marginTop="14dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@drawable/stroke_b">
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinner_lightning"
                    android:layout_marginBottom="14dp"
                    android:layout_marginTop="14dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
            </RelativeLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Очистка зимой"
                android:textColor="@color/marker"
                android:id="@+id/textView11"
                android:layout_below="@+id/spinner_lightning_l"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <RelativeLayout
                android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinner_winter_l"
            android:layout_below="@+id/textView11"
            android:layout_marginBottom="14dp"
            android:layout_marginTop="14dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
                android:background="@drawable/stroke_b">
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinner_winter"
                    android:layout_marginBottom="14dp"
                    android:layout_marginTop="14dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Стоимость"
                android:textColor="@color/marker"
                android:id="@+id/textView12"
                android:layout_below="@+id/spinner_winter_l"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edittext_price"
                android:textColor="@color/white"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:layout_below="@+id/textView12"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:inputType="number" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Время работы"
                android:textColor="@color/marker"
                android:id="@+id/textView13"
                android:layout_below="@+id/edittext_price"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edittext_time"
                android:textColor="@color/white"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:layout_below="@+id/textView13"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Контактный телефон"
                android:textColor="@color/marker"
                android:id="@+id/textView14"
                android:layout_below="@+id/edittext_time"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edittext_phone"
                android:textColor="@color/white"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:layout_below="@+id/textView14"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:inputType="number" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView15"
                android:text="Добавить в избранное"
                android:textColor="@color/white"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:layout_below="@+id/edittext_phone"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/switch_favourite"
                android:layout_alignBaseline="@+id/textView15"
                android:layout_toRightOf="@+id/textView15"
                android:layout_below="@+id/edittext_phone"
                android:layout_alignParentRight="true" />

            <Button
                android:layout_width="180dp"
                android:layout_height="40dp"

                android:layout_alignParentRight="true"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="16dp"
                android:id="@+id/accept_button"
                android:background="@drawable/add_event_button"
                android:text="Добавить площадку"
                android:layout_below="@+id/switch_favourite"
                android:textColor="@color/white"
                android:layout_alignTop="@+id/decline_button"
                android:layout_toLeftOf="@+id/decline_button"
                android:layout_toStartOf="@+id/decline_button"
                android:layout_marginRight="10dp" />



        </RelativeLayout>

    </ScrollView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/balls"
        android:padding="-16dp"
        android:scaleType="fitEnd"
        android:layout_alignParentBottom="true"
        android:baselineAlignBottom="false" />

</RelativeLayout>