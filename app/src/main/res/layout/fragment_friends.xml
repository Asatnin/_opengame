<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/balls"
        android:padding="-16dp"
        android:scaleType="fitEnd"
        android:layout_alignParentBottom="true"
        android:baselineAlignBottom="false" />
    <LinearLayout
        android:id="@+id/friends_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.dkondratov.opengame.fragments.FriendsFragment">

        <com.dkondratov.opengame.widgets.SlidingTabLayout
            android:id="@+id/sliding_tabs"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/grey"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_close_white_24dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"/>
            <ImageView
                android:id="@+id/ic_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_magnify_white_24dp"
                android:layout_marginLeft="16dp"/>
        <AutoCompleteTextView
            android:id="@+id/name"
            android:inputType="text"
            android:textColor="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_toRightOf="@+id/ic_search"
            android:layout_toLeftOf="@id/close"/>
        </RelativeLayout>
        <android.support.v4.view.ViewPager
            android:id="@+id/friends_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

</RelativeLayout>
